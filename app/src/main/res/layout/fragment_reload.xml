<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyish_black">


    <TextView
        android:id="@+id/reload_textview"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:background="@drawable/shadow_depth"
        android:text="Enter preferred amount"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rm_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="RM"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/reload_textview"
        app:layout_constraintStart_toStartOf="@+id/reload_textview" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="40mm"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:inputType="number"
        android:hint="0.00"
        app:layout_constraintBottom_toBottomOf="@+id/reload_textview"
        app:layout_constraintStart_toEndOf="@+id/rm_3" />

    <Button
        android:id="@+id/value_rm10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="RM 10.00"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reload_textview" />

    <Button
        android:id="@+id/value_rm20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 20.00"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toEndOf="@+id/value_rm10"
        app:layout_constraintTop_toTopOf="@+id/value_rm10" />

    <Button
        android:id="@+id/value_rm50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RM 50.00"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/value_rm20"
        app:layout_constraintTop_toTopOf="@+id/value_rm20" />








</androidx.constraintlayout.widget.ConstraintLayout>